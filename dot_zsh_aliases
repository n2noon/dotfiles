# Mac specific aliases
if [[ $OSTYPE == darwin* ]]; then
alias bi="brew install"
alias bu="brew uninstall"
alias bs="brew search"
alias bl="brew list"
fi

alias zshrc="$EDITOR ~/.zshrc"
alias vimrc="$EDITOR ~/.nvimrc"
alias nvimrc="$EDITOR ~/.nvimrc"
alias u='cd ..;'
alias nv="$EDITOR"
alias v="$EDITOR"
alias gp="git push"
alias gc="git commit"
alias gcm="git commit -m"
alias ga="git add"
alias vs="code"
alias py="python3"
alias cr="cargo run"
alias cb="cargo build"
alias ranger="y"
alias lf="y"
alias python="python3"
alias pip="pip3"
alias cat="bat"
alias grep="rg"
alias ls="eza"
alias find="fd"
alias gdu="gdu-go"

alias sudo="sudo "
