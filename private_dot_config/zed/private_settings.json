// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": { "button": false },
  "notification_panel": { "button": false },
  "assistant": {
    "version": "2",
    "button": false
  },
  "features": { "edit_prediction_provider": "zed" },
  "vim_mode": true,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "0x96f Theme"
  },
  "ui_font_size": 18,
  "ui_font_family": "Aporetic Sans",
  "buffer_font_size": 20.0,
  "buffer_font_weight": 400,
  "buffer_font_family": "Iosevka Fixed",
  "buffer_font_fallbacks": ["Iosevka Nerd Font Mono"],
  "buffer_font_features": {
    "calt": false,
    "cv10": 19,
    "cv01": 3,
    "cv05": 5,
    "cv08": 2,
    "cv41": 11,
    "cv44": 6,
    "cv45": 6,
    "cv47": 4,
    "cv46": 1,
    "cv48": 8,
    "cv49": 8,
    "cv54": 7,
    "cv55": 8,
    "cv26": 4,
    "VSAO": 1
  },
  "buffer_line_height": { "custom": 1.4 },
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_smartcase_find": true
  },
  "vertical_scroll_margin": 10,
  "show_wrap_guides": true,
  "wrap_guides": [120],
  "git": {
    "git_gutter": "tracked_files",
    // "gutter_debounce": null,
    "inline_blame": {
      "delay_ms": 2000
    }
  },
  // "inlay_hints": {
  //   "enabled": true
  // },
  "gutter": {
    "line_numbers": true,
    "folds": false,
    "code_actions": false,
    "runnables": false
  },
  "project_panel": {
    "indent_guides": { "show": "never" },
    "indent_size": 10,
    "default_width": 180,
    "auto_reveal_entries": false,
    "button": false,
    "entry_spacing": "standard"
  },
  "tab_bar": { "show_nav_history_buttons": false, "show": false },
  "indent_guides": { "enabled": false },
  "file_scan_exclusions": [
    "**/.vscode",
    "**/.git",
    "**/.svn",
    "Cargo.lock",
    "**/dist",
    "**/out"
  ],
  "show_whitespaces": "selection",
  "terminal": {
    "shell": { "program": "fish" },
    "option_as_meta": true,
    "line_height": "standard",
    "font_size": 18
  },
  "languages": {
    "Rust": {
      "format_on_save": "on"
    }
  }
}
